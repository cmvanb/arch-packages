pkgname=ttf-xenia
pkgver=1.0.0
pkgrel=1
pkgdesc="A monospace font with clearly distinguishable characters and extensive glyph support"
arch=('any')
url="https://github.com/Loretta1982/xenia"
license=('custom')
provides=('ttf-font')
source=("$pkgname-$pkgver.tar.gz::https://github.com/Loretta1982/xenia/archive/refs/heads/main.tar.gz")
sha512sums=('SKIP')

package() {
  cd "xenia-main"

  install -Dm644 fonts/ttf/*.ttf -t "$pkgdir/usr/share/fonts/TTF/"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
